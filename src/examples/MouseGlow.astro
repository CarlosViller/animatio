<script>
  const glowBox =  document.createElement("div")
  glowBox.id = "glow-box"
  glowBox.style.cssText = `
    box-shadow: 0px 0px 200px 200px rgba(168, 85, 247, 0.15);
    border-radius: 50%;
    position: absolute;
  `
  document.getElementsByClassName("page")[0].appendChild(glowBox)


  window.addEventListener("mousemove", (event) => {
    const glowBox = document.getElementById("glow-box")

    if (!glowBox) return;
    
    const mousePos = {
      x: event.pageX,
      y: event.pageY,
    };

    glowBox.style.transform = `translate(${mousePos.x}px, ${mousePos.y}px)`;
  });
</script>